// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int  @id @unique
  username    String
  secretO2FA  String
  avatar      String
  xp          Int
}

model Friends {
  id          Int     @id @unique
  user_1      Int
  user_2      Int
  status      String
  created_at  DateTime
}

model Match {
  id            Int     @id @default(autoincrement())
  user_1        Int
  user_2        Int
  user_1_score  Int
  user_2_score  Int
  created_at    DateTime
}

model Message {
  id            Int  @id @default(autoincrement())
  user          Int
  channel       Int
  text          String
  created_at    DateTime @default(now())
}

model Channel {
  id_count      Int     @id @default(autoincrement())
  id            Int
  name          String
  password      String
  created_at    DateTime
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
